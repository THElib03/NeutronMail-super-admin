    "version": "0.2.0",
    "configurations": [

        {
            "type": "java",
            "name": "Options",
            "request": "launch",
            "mainClass": "org.martincorp.Codec.Options",
            "projectName": "centralita"
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}",
            "vmArgs": "--module-path /openjdk/javafx/javafx-sdk-17.0.7/lib --add-modules javafx.controls,javafx.fxml"
        },
        {
            "type": "java",
            "name": "GUI",
            "request": "launch",
            "mainClass": "org.martincorp.Interface.GUI",
            "projectName": "centralita",
            "vmArgs": "--module-path /openjdk/javafx/javafx-sdk-17.0.7/lib --add-modules javafx.controls,javafx.fxml"
        }
    ]
}